{{ header }}{{ column_left }} 
<div id="content">
<div class="page-header">
    <div class="container-fluid">
      <div class="pull-right">
        <button type="submit" form="form-bestseller" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa fa-save"></i></button>
        <a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"><i class="fa fa-reply"></i></a></div>
      <h1>{{ heading_title }}</h1>
      <ul class="breadcrumb">
        {% for breadcrumb in breadcrumbs %} 
        <li><a href="{{ breadcrumb['href'] }}">{{ breadcrumb['text'] }}</a></li>
        {% endfor %} 
      </ul>
    </div>
  </div>
 <div class="container-fluid">
  {% if (error_warning) %} 
    <div class="alert alert-danger"><i class="fa fa-exclamation-circle"></i> {{ error_warning }} 
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
    {% endif %} 
<div class="panel panel-default">
    <div class="panel-heading">
		<h3 class="panel-title"><i class="fa fa-pencil"></i> {{ heading_title }}</h3> 
	</div>
	<div class="panel-body">
    <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-blogtagcloud" class="form-horizontal">
		<div class="form-group">
            <label class="col-sm-2 control-label" for="input-name">{{ entry_name }}</label>
            <div class="col-sm-10">
              <input type="text" name="name" value="{{ name }}" placeholder="{{ entry_name }}" id="input-name" class="form-control" />
              {% if (error_name) %} 
              <div class="text-danger">{{ error_name }}</div>
              {% endif %} 
            </div>
		</div>
		<div class="form-group">
			<label class="col-sm-2 control-label">{{ entry_title }}</label>
			<div class="col-sm-10">
				{% for language in languages %} 
					<div class="form-group">
						<div class="col-sm-11">
							<input name="blogtagcloud_module[title][{{ language['language_id'] }}]" value="{{ modules['title'][language['language_id']] is defined ? modules['title'][language['language_id']] : '' }}" class="form-control" />
						</div>
						<div class="col-sm-1">
							<img src="language/{{ language['code'] }}/{{ language['code'] }}.png" title="{{ language['name'] }}" />
						</div>
					</div>
				{% endfor %} 
			</div>
		</div>
		<div class="form-group">
			<label class="col-sm-2 control-label">{{ entry_limit }}</label>
			<div class="col-sm-10">
				<input type="text" name="blogtagcloud_module[limit]" value="{{ modules['limit'] is defined ?modules['limit']:3 }}" class="form-control" />
				{% if (error_limit) %} 
					<div class="text-danger">{{ error_limit }}</div>
				{% endif %} 
			</div>
		</div>
		<div class="form-group">
			<label class="col-sm-2 control-label">{{ entry_min_font_size }}</label>
			<div class="col-sm-10">
				<input type="text" name="blogtagcloud_module[min_font_size]" value="{{ modules['min_font_size'] is defined ?modules['min_font_size']:9 }}" class="form-control" />
				{% if (error_min_font_size) %} 
					<div class="text-danger">{{ error_min_font_size }}</div>
				{% endif %} 
			</div>
		</div>
		<div class="form-group">
			<label class="col-sm-2 control-label">{{ entry_max_font_size }}</label>
			<div class="col-sm-10">
				<input type="text" name="blogtagcloud_module[max_font_size]" value="{{ modules['max_font_size'] is defined ?modules['max_font_size']:25 }}" class="form-control" />
				{% if (error_max_font_size) %} 
					<div class="text-danger">{{ error_max_font_size }}</div>
				{% endif %} 
			</div>
		</div>
		<div class="form-group">
			<label class="col-sm-2 control-label">{{ entry_font_weight }}</label>
			<div class="col-sm-10">
				<select name="blogtagcloud_module[font_weight]" class="form-control">
				{% for font_weight in font_weights %} 
					{% if (modules['font_weight'] is defined and font_weight['font_weight'] == modules['font_weight']) %} 
						<option value="{{ font_weight['font_weight'] }}" selected="selected">{{ font_weight['title'] }}</option>
					{% else %} 
						<option value="{{ font_weight['font_weight'] }}">{{ font_weight['title'] }}</option>
					{% endif %} 
				{% endfor %} 
				</select>
			</div>
		</div>
		<div class="form-group">
            <label class="col-sm-2 control-label" for="input-status">{{ entry_status }}</label>
            <div class="col-sm-10">
              <select name="status" id="input-status" class="form-control">
					{% if (status) %} 
					<option value="1" selected="selected">{{ text_enabled }}</option>
					<option value="0">{{ text_disabled }}</option>
					{% else %} 
					<option value="1">{{ text_enabled }}</option>
					<option value="0" selected="selected">{{ text_disabled }}</option>
					{% endif %} 
				  </select>
            </div>
        </div>
			
    </form>
	</div>
</div>
</div>
