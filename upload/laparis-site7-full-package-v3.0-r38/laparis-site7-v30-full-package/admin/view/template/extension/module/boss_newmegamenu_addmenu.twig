<div id="btnewmenu">
	<table class="table table-striped table-bordered table-hover">
		<tr><td class="text-left">{{ text_menu_title }}</td>
			<td class="text-left">
			<table class="table table-striped table-bordered table-hover">
			{% for language in languages %} 
				<tr><td>
				{{ btform . textField('menudes['~language['language_id']~'][title]',menu_description[language['language_id']]['title'] is defined ?menu_description[language['language_id']]['title']:'',50,'class="form-control" placeholder="'~text_title_default~'"') }}</td>
				<td><img src="language/{{ language['code'] }}/{{ language['code'] }}.png" title="{{ language['name'] }}" /></td></tr>
			{% endfor %}</table></td></tr>
			
		<tr><td>{{ entry_num_column }}</td>
			<td class="left">{{ btform . makeSelectHTML(arrcolumns, 'num_column','',menus['num_column'] is defined ? menus['num_column'] : '') }}</td></tr>
			
		<tr><td>{{ entry_url }}</td>
			<td>{{ btform . textField('url',menus['url'] is defined ?menus['url']:'#',50) }}</td></tr>
		<tr><td>{{ entry_sort_order }}</td>
			<td>{{ btform . textField('sort_order',menus['sort_order'] is defined ?menus['sort_order']:'',11) }}</td></tr>
		<tr><td>{{ entry_status }}</td>
			<td class="left">{{ btform . makeSelectHTML(arrstatus, 'status','',menus['status'] is defined ? menus['status'] : '') }}</td></tr>
		<tr><td class="left">{{ text_menu_label }}</td>
			<td class="left">
			<table class="table table-striped table-bordered table-hover">
			{% for language in languages %} 
				<tr><td>{{ btform . textField('menudes['~language['language_id']~'][label]',menu_description[language['language_id']]['label'] is defined ?menu_description[language['language_id']]['label']:'',50) }}</td>
				<td><img src="language/{{ language['code'] }}/{{ language['code'] }}.png" title="{{ language['name'] }}" /></td></tr>
			{% endfor %}</table></td></tr>
		<tr><td>{{ entry_label_color }}</td>
			<td>{{ btform . textField('label_color',menus['label_color'] is defined ?menus['label_color']:'',11) }}<br />
			<span class="help">Get color code at<a target="_blank" href="http://www.colorpicker.com/"> here</a></span></td></tr>
		<tr><td>{{ entry_icon }}</td>
			<td class="left"><div class="image">			
			<a href="" id="thumb-image" data-toggle="image" class="img-thumbnail"><img src="{{ menus['thumb'] is defined ?menus['thumb']:no_image }}" alt="" title="" data-placeholder="{{ no_image }}" /></a>
			<input type="hidden" name="icon" value="{{ menus['icon'] is defined ?menus['icon']:'' }}" id="input-image" />
            </div></td></tr>
		<tr><td>{{ entry_icon_class }}</td>
			<td class="left">
			<table class="table table-striped table-bordered table-hover">
			<tr><td>Show</td>
			<td>{{ btform . makeSelectHTML(arrstatus, 'icon_class_status','',menus['icon_class_status'] is defined ? menus['icon_class_status'] : '') }}</td></tr>
			<tr><td><label class="control-label"><span data-toggle="tooltip" title="" data-original-title="Add class icon bootstrap ...exp: glyphicon glyphicon-search">{{ icon_class_css }}</span><label><br />Link icon: <a target="_blank" href=" http://getbootstrap.com/components/">Bootstrap icon</a></td>
			<td>{{ btform . textField('icon_class',menus['icon_class'] is defined ?menus['icon_class']:'',50) }}</td>			
			</tr></table></td>
	</table>
</div>