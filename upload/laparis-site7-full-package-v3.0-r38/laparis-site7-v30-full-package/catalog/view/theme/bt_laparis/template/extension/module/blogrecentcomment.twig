<div class="bt-recent-comments box style-2">
  <div class="box-heading block-title">
    <h2>{{ heading_title }}</h2>
  </div>
  <div class="box-content">
    {% if (articles) %}
    <div id="bt-recent-comment-{{ module }}" class="v-padding-10 {{ scrolling ? 'owl-carousel-2 owl-theme-2 nav-middle fix-padding' : '' }}">
      {% for article in articles %} 
      <div class="comment-item text-left">
        <div class="comment-body">
          <div class="title"> <a class="article-title" href="{{ article['href'] }}">{{ article['name'] }}</a> </div>
          {{ article['comment'] }}
        </div>
        <div class="comment-header">
          <div class="comment-author">
            <div class="comment-name">{{ article['author'] }}</div>
            <div class="comment-time">{{ article['date_added'] }}</div>
          </div>
        </div>
      </div>
      {% endfor %} 
    </div>
    {% else %} 
    {{ 'There are no comments.' }} 
    {% endif %} 
  </div>
</div>
{% if (scrolling) %} 
<script type="text/javascript"><!--
$(function() {
	if ($('html').attr('dir') == 'rtl') {
		var rtl = true;
	} else {
		var rtl = false;
	}
	
	var elm = $('#bt-recent-comment-{{ module }}');
	var loop = (elm.children().length > 1) ? true : false;
	
	elm.owlCarousel2({
		items: 1,
		loop: loop,
		nav: true,
		navText: ['<img src="data:image/svg+xml;base64," />', '<img src="data:image/svg+xml;base64," />'],
		dots: false,
		autoplay: true,
		autoplayTimeout: 5000,
		autoplayHoverPause: true,
		rtl:rtl
	});
});
//--></script>
{% endif %} 
