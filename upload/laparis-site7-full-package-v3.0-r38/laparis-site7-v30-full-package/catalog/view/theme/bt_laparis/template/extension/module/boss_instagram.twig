<div class="box bt-instagram">
  {% if (title or strip_tags(description)) %} 
  <div class="instagram-box">
    {% if (title) %} 
    <div class="box-heading">
      <h2>{{ title }}</h2>
    </div>
    {% endif %} 
    {% if (description) %} 
    <div class="box-content"> {{ description }} </div>
    {% endif %} 
  </div>
  {% endif %} 
  <div id="instafeed" class="owl-carousel-2 owl-theme-2 nav-middle"></div>
<script type="text/javascript">
(function() {
	var feed = new Instafeed({
		get: 'user',
		userId: '{{ user_id }}',
		clientId: '{{ client_id }}',
		accessToken: '{{ token }}',
		resolution: 'standard_resolution',
		template: '<div class="instafeed-item"><a href="{{ '{{' }}link{{ '}}' }}" target="_blank" id="{{ '{{' }}id{{ '}}' }}"><img src="{{ '{{' }}image{{ '}}' }}" alt="{{ '{{' }}caption{{ '}}' }}" /></a></div>',
		sortBy: 'most-recent',
		limit: {{ limit }},
		links: false,
		after: function() {
			if ($('html').attr('dir') == 'rtl') {
				var rtl = true;
			} else {
				var rtl = false;
			}
			
			var elm = $('#instafeed')
			
			elm.owlCarousel2({
				loop: true,
				nav: false,
				navText: ['<img src="data:image/svg+xml;base64," />', '<img src="data:image/svg+xml;base64," />'],
				dots: false,
				autoWidth: true,
				margin: 0,
				rtl:rtl,
			});
		}
	});
	
	feed.run();
})();
</script>
</div>