<div class="bt-carousel box {{ style }} {% if (style != 'normal') %} {{ 'style-1' }}{% endif %}">
  <div class="{{ full_width ? 'container-fluid' : 'container' }}">
    <div class="{{ full_width ? 'row' : '' }}">
      {% if (heading_title) %} 
      <div class="box-heading title">
        <h2>{{ heading_title }}</h2>
      </div>
      {% endif %} 
      <div id="carousel{{ module }}">
        <div class="box-content">
          <ul id="boss_carousel{{ module }}" class="{% if (js == 'owl') %}owl-carousel-2 owl-theme-2 nav-middle nav-visible fix-padding{% endif %}">
            {% for banners in array_chunk(banners, num_row) %} 
            <li>
              {% for banner in banners %} 
              <div class="image"> <a href="{{ banner['link'] }}"><img class="img-responsive {{ opacity ? 'img-opacity' : '' }}" src="{{ banner['image'] }}" alt="{{ banner['title'] }}" title="{{ banner['title'] }}" /></a> </div>
              {% endfor %} 
            </li>
            {% endfor %} 
          </ul>
        </div>
      </div>
    </div>
  </div>
{% if (style == 'flip') %} 
<script type="text/javascript">
$(function() {
	if ($('html').attr('dir') == 'rtl') {
		var rtl = true;
	} else {
		var rtl = false;
	}
	
	$('#boss_carousel{{ module }}').slick({
		slidesToShow: {{ img_row }},
		slidesToScroll: 1,
		prevArrow: '<div class="slick-prev"><img src="data:image/svg+xml;base64," /></div>',
		nextArrow: '<div class="slick-next"><img src="data:image/svg+xml;base64," /></div>',
		autoplay:  {{ auto ? 'true' : 'false' }},
		dots: {{ pagination ? 'true' : 'false' }},
		autoplaySpeed: {{ time*1000 }},
		centerMode: {{ center ? 'true' : 'false' }},
		centerPadding: '12.5%',
		speed: 500,
		rtl: rtl
	});
});
//--></script>
{% elseif (style == 'vertical') %} 
<script type="text/javascript">
$(function() {
	if ($('html').attr('dir') == 'rtl') {
		var rtl = true;
	} else {
		var rtl = false;
	}
	
	$('#boss_carousel{{ module }}').slick({
		slidesToShow: {{ img_row }},
		slidesToScroll: 1,
		prevArrow: '<div class="slick-prev"><img src="data:image/svg+xml;base64," /></div>',
		nextArrow: '<div class="slick-next"><img src="data:image/svg+xml;base64," /></div>',
		autoplay:  {{ auto ? 'true' : 'false' }},
		dots: {{ pagination ? 'true' : 'false' }},
		autoplaySpeed: {{ time*1000 }},
		centerMode: {{ center ? 'true' : 'false' }},
		vertical: {{ vertical ? 'true' : 'false' }},
		rtl: rtl
	});
});
//--></script>
 {% else %} 
<script type="text/javascript"><!--
$(function() {
	if ($('html').attr('dir') == 'rtl') {
		var rtl = true;
	} else {
		var rtl = false;
	}
	
	var elm = $('#boss_carousel{{ module }}');
	var loop = (elm.children().length > {{ img_row }}) ? true : false;
	
	if ({{ img_row }} > 1) {
		var responsive = {
			992: {
				items: {{ img_row }} 
			},
			768: {
				items: {{ round(img_row/2) }} 
			},
			560: {
				items: {{ round(img_row/2) }},
				autoHeight: false
			},
			0: {
				items: {{ round(img_row/4) }},
				autoHeight: false
			}
		};
	} else {
		var responsive = {};
	}
	
	elm.owlCarousel2({
		items: {{ img_row }},
		loop: loop,
		nav: {{ navigation ? 'true' : 'false' }},
		navText: ['<img src="data:image/svg+xml;base64," />', '<img src="data:image/svg+xml;base64," />'],
		dots: {{ pagination ? 'true' : 'false' }},
		center: {{ center ? 'true' : 'false' }},
		autoplay: {{ auto ? 'true' : 'false' }},
		autoplayTimeout: {{ time*1000 }},
		smartSpeed: 500,
		rtl: rtl,
		responsive: responsive
	});
});
//--></script>
{% endif %} 
</div>